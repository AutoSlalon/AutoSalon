{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
IBQuery1.sql.Add('select login,passward from autoriz where (login=:login) and (passward=:passward)');
//SQL для выборки логина и пароля из БД
IBQuery1.Params.ParamByName('login').Value:=edit1.Text;
//Значение edit1 приравнивается к полю логин из БД
IBQuery1.Params.ParamByName('passward').Value:=edit2.Text;
// Значение edit2 приравнивается к полю пароля из БД
IBQuery1.execSQL; //Включение кода SQL
IBQuery1.Open;
IBTransaction1.Commit();
if adoquery1.FieldByName('login').AsString<>'' then //Проверка на логин и пароль
begin
  showmessage('Успешно'); //Вывод сообщения об успешной Авторизации

end
else
 showmessage('Неверный пароль или логин');
 //Вывод сообщения о неверном пароле или логине
end;

end.
